<odoo>
    <data>

        <!-- Access Rule Tree View -->
        <record id="api_access_rule_tree_view" model="ir.ui.view">
            <field name="name">api.access.rule.tree</field>
            <field name="model">api.access.rule</field>
            <field name="arch" type="xml">
                <tree string="API Access Rules">
                    <field name="name"/>
                    <field name="model_id"/>
                    <field name="api_key_id"/>
                    <field name="create"/>
                    <field name="read"/>
                    <field name="write"/>
                    <field name="delete"/>
                </tree>
            </field>
        </record>

        <!-- Access Rule Form View -->
        <record id="api_access_rule_form_view" model="ir.ui.view">
            <field name="name">api.access.rule.form</field>
            <field name="model">api.access.rule</field>
            <field name="arch" type="xml">
                <form string="API Access Rule">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="model_id"/>
                            <field name="api_key_id"/>
                            <field name="create"/>
                            <field name="read"/>
                            <field name="write"/>
                            <field name="delete"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Access Rule Action -->
        <record id="action_api_access_rules" model="ir.actions.act_window">
            <field name="name">API Access Rules</field>
            <field name="res_model">api.access.rule</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="api_access_rule_tree_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Define access rules for API keys.
                </p>
            </field>
        </record>

        <!-- Access Rule Menu Item -->
        <menuitem id="menu_api_access_rules"
                  name="API Access Rules"
                  parent="api_menu"
                  action="action_api_access_rules"
                  sequence="20"/>

    </data>
</odoo>