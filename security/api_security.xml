<odoo>
    <data noupdate="1">

        <!-- Group for API Users -->
        <record id="group_api_user" model="res.groups">
            <field name="name">API User</field>
            <field name="category_id" ref="base.module_category_hidden"/>
            <field name="comment">Group for users who can manage API keys and endpoints.</field>
        </record>

        <!-- Access Control List for API Key Model -->
        <record id="access_api_key_model" model="ir.model.access">
            <field name="name">api_key_model_access</field>
            <field name="model_id" ref="model_api_key"/>
            <field name="group_id" ref="group_api_user"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Access Control List for API Access Rule Model -->
        <record id="access_api_access_rule_model" model="ir.model.access">
            <field name="name">api_access_rule_model_access</field>
            <field name="model_id" ref="model_api_access_rule"/>
            <field name="group_id" ref="group_api_user"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Access Control List for API Endpoint Model -->
        <record id="access_api_endpoint_model" model="ir.model.access">
            <field name="name">api_endpoint_model_access</field>
            <field name="model_id" ref="model_api_endpoint"/>
            <field name="group_id" ref="group_api_user"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

    </data>
</odoo>